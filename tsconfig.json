{
    "compilerOptions": {
        "lib": [
          "ES2021"
        ],
        "module": "Node16",
        "target": "ES2021",
        "moduleResolution": "Node16",

        "strict": true,
        "skipLibCheck": true,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "./dist",
        "rootDir": "./src"
    }
}
